{
    "name": "graberlaw/website",
    "description": "Website for Graber Law Firm, PLLC.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Peter Graber",
            "role": "web"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": ">=5.6",
        "composer/installers": " v1.7.0",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/admin_toolbar": "^2.3",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.8.0",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/core-recommended": "^8.8.0",
        "drupal/devel": "^2.1",
        "drupal/google_analytics": "^3.0",
        "drupal/google_tag": "^1.4",
        "drupal/hreflang": "^1.3",
        "drupal/metatag": "^1.12",
        "drupal/paragraphs": "^1.5",
        "drupal/pathauto": "^1.3",
        "drupal/redirect": "^1.6",
        "drupal/seo_checklist": "^4.1",
        "drupal/twig_tweak": "^2.5",
        "drupal/webform": "^5.1",
        "drupal/webform_views": "^5.0@alpha",
        "drupal/xmlsitemap": "^1.0@RC",
        "drush/drush": "^9.0.0",
        "typo3/phar-stream-wrapper": "^3.1.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
	"optimize-autoloader": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "./public_html/core": ["type:drupal-core"],
            "./public_html/libraries/{$name}": ["type:drupal-library"],
            "./public_html/modules/contrib/{$name}": ["type:drupal-module"],
            "./public_html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "./public_html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
	    "locations": {
                "web-root": "public_html"
	    } 
        }
    }
}
